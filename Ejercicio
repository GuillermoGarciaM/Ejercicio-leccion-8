package ejercicio;

public class Ejercicio_8 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		persona nuevaPersona=new persona();
		nuevaPersona.setEdad(18);
		nuevaPersona.setNombre("Arturo");
		nuevaPersona.setTelefono(555555);
		
		System.out.println("El nombre de la persona es " + nuevaPersona.getNombre() + " tiene " + 
		nuevaPersona.getEdad() + " a√±os y su numero es " + nuevaPersona.getTelefono());
	}

}

class persona{
	private int edad;
	private String nombre;
	private int telefono;
	
	public void setEdad(int edad) {
		this.edad=edad;		
	}
	public int getEdad() {
		return edad;
	}
	public void setNombre(String nombre) {
		this.nombre=nombre;		
	}
	public String getNombre() {
		return nombre;
	}
	public void setTelefono(int telefono) {
		this.telefono=telefono;		
	}
	public int getTelefono() {
		return telefono;
	}
}
